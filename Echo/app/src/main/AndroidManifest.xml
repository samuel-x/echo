            </intent-filter>
        </activity>
        <activity android:name=".activities.ApMapActivity" />
        <activity android:name=".activities.taskCreation.TaskCategories" />
        <activity android:name=".activities.taskCreation.TaskConfirm" />
        <activity android:name=".activities.taskCreation.TaskDetails" />
        <activity android:name=".activities.taskCreation.TaskSubcategories" />
        <activity android:name=".activities.PaymentActivity" />
        <activity android:name=".activities.RatingActivity" />
        <activity android:name=".activities.tasks.TaskAssistantDetails" />

        <activity android:name=".activities.AssistantMapActivity" />
        <activity android:name=".activities.HelperActivity" />
        <activity android:name=".activities.ChatActivity" />
        <activity android:name=".activities.tasks.TaskCurrent" />
        <activity android:name=".activities.tasks.TaskAssistantList" />
        <activity android:name=".activities.AccountActivity" />

        <service android:name=".activities.tasks.uiElements.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

