<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/paymentAmount"
        android:layout_width="203dp"
        android:layout_height="143dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="$8.90"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:typeface="sans"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="48dp"
        tools:textSize="70sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Summary"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/assistantUsername"
        android:layout_width="203dp"
        android:layout_height="38dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="John Doe"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="191dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="203dp"
        android:layout_height="47dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="RATING: 3.50 STARS"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="229dp" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="342dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:gravity="bottom|center_vertical|center_horizontal|center|clip_vertical|clip_horizontal"
        android:text="RATE YOUR ASSISTANT"
        android:textColor="grey"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="302dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="269dp"
        android:layout_height="52dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="SUBMIT"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="399dp" />
</android.support.constraint.ConstraintLayout>